# Testing Environment Configuration
ENVIRONMENT=testing

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=WARNING

# Security
SECRET_KEY=test-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=5
REFRESH_TOKEN_EXPIRE_MINUTES=10

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
MONGODB_URL=mongodb://admin:password123@localhost:27017/marslanding_test?authSource=admin
MONGODB_DATABASE=marslanding_test
MONGODB_MAX_CONNECTIONS=5
MONGODB_MIN_CONNECTIONS=1

# Redis
REDIS_URL=redis://localhost:6379/15
REDIS_MAX_CONNECTIONS=5

# Celery
CELERY_BROKER_URL=redis://localhost:6379/14
CELERY_RESULT_BACKEND=redis://localhost:6379/13

# Monitoring
ENABLE_METRICS=false
SENTRY_DSN=

# File Upload
MAX_FILE_SIZE=1048576
UPLOAD_DIR=test_uploads

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=60

# Cache
CACHE_TTL=1
CACHE_ENABLED=false

# Testing
TESTING=true
TEST_DATABASE_URL=mongodb://admin:password123@localhost:27017/marslanding_test?authSource=admin
